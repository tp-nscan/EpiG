<UserControl x:Class="SorterControls.View.SorterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view="clr-namespace:SorterControls.View"
             xmlns:design="clr-namespace:SorterControls.ViewModel.Design"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance design:DesignSorterVm, IsDesignTimeCreatable=True}"
             x:Name="ControlRoot"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ListView ItemsSource="{Binding SwitchVms}" ItemTemplate="{DynamicResource SwitchTemplate}" Background="#2FFF">

            <ListView.Resources>
                <DataTemplate x:Key="SwitchTemplate">
                    <view:SwitchVisual Margin="-5,0" KeyPair="{Binding KeyPair, Mode=OneWay}" KeyCount="{Binding KeyCount, Mode=OneWay}" Height="200" Width="10"/>
                </DataTemplate>
            </ListView.Resources>

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"></StackPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

        </ListView>

    </Grid>
</UserControl>
