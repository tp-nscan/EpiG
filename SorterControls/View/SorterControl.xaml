<UserControl x:Class="SorterControls.View.SorterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:design="clr-namespace:SorterControls.ViewModel.Design"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance design:DesignSorterVmImpl, IsDesignTimeCreatable=True}"
             x:Name="ControlRoot"
             d:DesignHeight="200">


    <ContentControl
		Content="{Binding}"
		ContentTemplateSelector="{DynamicResource SorterSelector}">

    </ContentControl>


</UserControl>
